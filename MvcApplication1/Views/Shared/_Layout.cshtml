<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <h3>New</h3>
    <ul>
        <li><a href="@Url.Action("index", "shops")">Boutiques</a></li>
        <li><a href="@Url.Action("show", "shops", new { id = "pizza-butt"})">Pizza Butt</a></li>
    </ul>

    <h3>Old</h3>
    <ul>
        <li><a href="/shops">Shops</a></li>
        <li><a href="/shops/pizza-butt">Pizza Butt</a></li>
    </ul>

    @RenderBody()



    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
